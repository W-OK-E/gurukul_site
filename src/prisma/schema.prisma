// src/prisma/schema.prisma

// --- Datasource: tells Prisma how to connect to your DB
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// --- Generator: tells Prisma to generate the TS client
generator client {
  provider = "prisma-client-js"
}

// --- Enum: custom roles
enum Role {
  STUDENT
  INSTRUCTOR
  ADMIN
}

// --- Example user model
model User {
  id    String @id @default(uuid())
  email String @unique
  role  Role
}
